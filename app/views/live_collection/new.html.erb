<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Create a new Live Collection</h1>
    <div class="well">

      <%= form_for @live, url: '/live_collection' do |f| %>
        <%= render 'shared/live_errors' %>

        <div class="form-group">
          <%= f.label :shop_url, "Your shop" %>
          <%= f.text_field :shop_url, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :title, "Collection name" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="input-group date", id = "livetime" >
          <p>Create collection with products created in the last:</p>
        <%= f.number_field :time_number, :class => "form-control" %>
        <%= f.select :time_type, :options => {"hours" => "hours", "days" => "days", "months" => "months", "years" => "years"}, :class => "form-control" %>
        </div>

        <%= f.submit "Create Live Collection", class: "btn btn-lg btn-primary" %>
      <% end %>

    </div>
  </div>
</div>


