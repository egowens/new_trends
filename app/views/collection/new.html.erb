<div class = "row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Create a New Collection</h1>
    <div class="well">

      <%= form_for @collection, url: '/collection' do |f| %>

        <div class="form-group">
          <%= f.label :title, "Collection Name" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="input-group date", id="datetimepicker">
          <%= f.datetime_field :published_at_min, :class => "form-control", :placeholder => "New products since..." %>
          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
          </div></br>
        </div>

        <%= f.submit "Create Collection", class: "btn btn-lg btn-primary" %>
      <% end %>

    </div>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#datetimepicker').datetimepicker({

    });
  });
</script>
