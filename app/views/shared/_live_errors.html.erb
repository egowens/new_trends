<% if @live_collection.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@live_collection.errors.count, 'error') %>
    </div>
    <ul>
    <% @live_collection.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
